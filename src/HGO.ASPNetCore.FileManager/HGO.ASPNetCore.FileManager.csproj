<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	  <SatelliteResourceLanguages>en</SatelliteResourceLanguages>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="hgofilemanager\context\repository.txt" />
    <None Remove="hgofilemanager\context\skins\kali_light.css" />
    <None Remove="hgofilemanager\dropzone\dropzone.css" />
    <None Remove="hgofilemanager\dropzone\dropzone.js" />
    <None Remove="hgofilemanager\HgoFileManager.css" />
    <None Remove="hgofilemanager\HgoFileManager.js" />
    <None Remove="hgofilemanager\images\Loading.gif" />
    <None Remove="hgofilemanager\js.cookie\js.cookie.js" />
    <None Remove="hgofilemanager\split.js\split.js" />
    <None Remove="hgofilemanager\viselect\viselect.js" />
    <None Remove="Views\Shared\Components\FileManagerComponent\Default.cshtml" />
    <None Remove="Views\Shared\HgoFileManager\Edit.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Views\Shared\Components\FileManagerComponent\Default.cshtml" />
    <Content Include="Views\Shared\HgoFileManager\Edit.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Razor.RuntimeCompilation" Version="6.0.27" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.1" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="8.0.3" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="SharpCompress" Version="0.36.0" />
  </ItemGroup>

  <ItemGroup>
	  <EmbeddedResource Include="Views/**/*.cshtml" Pack="true" />
	  <EmbeddedResource Include="hgofilemanager/**/*.*" Pack="true" />
  </ItemGroup>
</Project>

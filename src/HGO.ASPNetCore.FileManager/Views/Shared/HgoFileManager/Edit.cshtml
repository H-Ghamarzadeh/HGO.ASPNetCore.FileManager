@using Microsoft.AspNetCore.Http
@model dynamic

@{
    Layout = null;
    bool darkMode = ViewContext.HttpContext.Session.GetString("HgoFileManagerTheme") == "Dark";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@TempData["FileName"]</title>

    <link rel="stylesheet" href="hgofilemanager/codemirror/5.65.7/lib/codemirror.css" type="text/css" />
    <link rel="stylesheet" href="hgofilemanager/codemirror/5.65.7/addon/search/matchesonscrollbar.css" type="text/css" />
    <link rel="stylesheet" href="hgofilemanager/codemirror/5.65.7/addon/dialog/dialog.css" type="text/css" />
    <link rel="stylesheet" href="hgofilemanager/codemirror/5.65.7/addon/hint/show-hint.css" type="text/css" />
    @if (darkMode)
    {
        <link rel="stylesheet" href="hgofilemanager/codemirror/5.65.7/theme/ayu-mirage.css" type="text/css" />
    }

    <script src="hgofilemanager/jquery/dist/jquery-3.7.1.min.js"></script>
    <script src="hgofilemanager/codemirror/5.65.7/lib/codemirror.js"></script>
    <script src="hgofilemanager/codemirror/5.65.7/mode/xml/xml.js"></script>
    <script src="hgofilemanager/codemirror/5.65.7/mode/javascript/javascript.js"></script>
    <script src="hgofilemanager/codemirror/5.65.7/mode/css/css.js"></script>
    <script src="hgofilemanager/codemirror/5.65.7/mode/htmlmixed/htmlmixed.js"></script>
    <script src="hgofilemanager/codemirror/5.65.7/addon/scroll/annotatescrollbar.js"></script>
    <script src="hgofilemanager/codemirror/5.65.7/addon/search/search.js"></script>
    <script src="hgofilemanager/codemirror/5.65.7/addon/search/searchcursor.js"></script>
    <script src="hgofilemanager/codemirror/5.65.7/addon/search/matchesonscrollbar.js"></script>
    <script src="hgofilemanager/codemirror/5.65.7/addon/search/jump-to-line.js"></script>
    <script src="hgofilemanager/codemirror/5.65.7/addon/search/match-highlighter.js"></script>
    <script src="hgofilemanager/codemirror/5.65.7/addon/selection/active-line.js"></script>
    <script src="hgofilemanager/codemirror/5.65.7/addon/dialog/dialog.js"></script>
    <script src="hgofilemanager/codemirror/5.65.7/addon/edit/closetag.js"></script>
    <script src="hgofilemanager/codemirror/5.65.7/addon/edit/closebrackets.js"></script>
    <script src="hgofilemanager/codemirror/5.65.7/addon/edit/matchbrackets.js"></script>
    <script src="hgofilemanager/codemirror/5.65.7/addon/edit/matchtags.js"></script>
    <script src="hgofilemanager/codemirror/5.65.7/addon/fold/indent-fold.js"></script>
    <script src="hgofilemanager/codemirror/5.65.7/addon/fold/xml-fold.js"></script>
    <script src="hgofilemanager/codemirror/5.65.7/addon/hint/show-hint.js"></script>
    <script src="hgofilemanager/codemirror/5.65.7/addon/hint/anyword-hint.js"></script>


    <style>
        html, body {
            font-family: 'Segoe UI', Tahoma, sans-serif;
            padding: 0;
            margin: 0;
            @Html.Raw(darkMode ? "min-height: 100%; background-color: #1f2430;" : "");
        }

        .header {
            padding: 10px;
            background-color: @Html.Raw(darkMode ? "#3f3f3f" : "#e9e9e9");
            color: @Html.Raw(darkMode ? "white" : "#000000");
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-content: center;
            align-items: center;
            border-bottom: 1px solid @Html.Raw(darkMode ? "#727272" : "#c7c7c7");
            flex-wrap: wrap;
        }

            .header span {
                overflow: hidden;
                text-wrap: nowrap;
            }

            .header button {
                border: none;
                border-radius: 10px;
                padding: 5px 20px;
                cursor: pointer;
                transition: all .25s linear;
                color: white;
            }

            .header .saveBtn {
                background-color: #348efd;
            }

            .header .closeBtn {
                background-color: #858585;
            }

            .header button:hover {
                background-color: #585858;
                transition: all .25s linear;
            }
    </style>
</head>
<body>
    <div class="header">
        <span>File Name: @TempData["FileFullPath"]</span>
        <div>
            <button class="saveBtn" onclick="SaveDocument()">Save</button>
            <button class="closeBtn" onclick="window.close()">Close</button>
        </div>
    </div>
    <textarea id="code-editor">@TempData["FileData"]</textarea>

    <script type="text/javascript">
        CodeMirror.commands.autocomplete = function (cm) {
            cm.showHint({ hint: CodeMirror.hint.anyword });
        }

        var editor = undefined;
        document.addEventListener('DOMContentLoaded', function () {
            editor = CodeMirror.fromTextArea(document.getElementById('code-editor'), {
                mode: "htmlmixed",
                styleActiveLine: true,
                lineNumbers: true,
                autoCloseBrackets: true,
                autoCloseTags: true,
                matchTags: { bothTags: true },
                matchBrackets: { bothBrackets: true },
                highlightSelectionMatches: { showToken: /\w/ },
                extraKeys: { "Ctrl-Space": "autocomplete" },
                viewportMargin: Infinity
            });
            editor.setSize("100%", "100%");
            @Html.Raw(darkMode ? "editor.setOption('theme', 'ayu-mirage')" : "");
        }, false);

        function SaveDocument() {
            let content = editor.getValue();

            $.post('@Context.Request.Path', { id: '@TempData["Id"]', command: "editfile", parameters: JSON.stringify({ FilePath: '@TempData["FileFullPath"].ToString().Replace("\\", "\\\\")', Data: content }) }, function (data) {
                if (data.message === 'OK') {
                    window.close();
                } else {
                    if (data.message)
                        alert(data.message);
                    if (data.Error)
                        alert(data.Error);
                }
            }, 'json');
        }
    </script>
</body>
</html>